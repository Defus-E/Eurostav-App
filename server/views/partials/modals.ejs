<div id="add-loc" uk-modal="">
  <div class="uk-modal-dialog uk-modal-body uk-margin-auto-vertical">
    <div class="add-loc">
      <form class="modal" method="POST" action="/building/add">
        <div class="success"></div>
        <div class="error"></div>
        <div class="uk-margin">
          <label class="uk-form-label">Название стройки</label>
          <div class="uk-form-controls">
            <input class="uk-input fix-input-1" type="text" name="title" autocomplete="off" placeholder="" />
          </div>
        </div>
        <div class="uk-margin">
          <label class="uk-form-label">Координаты</label>
          <div class="uk-form-controls duble">
            <input class="uk-input fix-input-1" type="text" name="x" autocomplete="off"
              pattern="[+-]?([0-9]*[.])?[0-9]+" placeholder="" />
            <input class="uk-input fix-input-1" type="text" name="y" autocomplete="off"
              pattern="[+-]?([0-9]*[.])?[0-9]+" placeholder="" />
          </div>
        </div>
        <div class="uk-margin">
          <label class="uk-form-label">Краны</label>
          <div class="uk-form-controls duble">
            <input class="uk-input fix-input-1" type="text" name="marks" autocomplete="off" placeholder="" />
            <input class="uk-input fix-input-1" type="text" name="series" autocomplete="off" placeholder="" />
          </div>
        </div>
        <div class="uk-margin">
          <div class="uk-form-controls">
            <select name="place" class="uk-select" required>
              <option value="Чехия">Чехия</option>
              <option value="Словакия">Словакия</option>
            </select>
          </div>
        </div>
        <p class="uk-text-right" style="margin-bottom: 0;">
          <button class="uk-button uk-button-default uk-modal-close" type="button">Отмена</button>
          <button class="uk-button uk-button-primary" type="submit">Добавить стройку</button>
        </p>
      </form>
    </div>
  </div>
</div>
