<% layout('./layout/index') -%>
<% block('title', "Техника безопасности") -%>
<% block('url', "/safety") -%>

<div class="d_content" style="height: 100%;position: relative;">
  <div class="top-bar">
    <h1>Техника безопасности</h1>
  </div>
  <div class="content" style="height: 92%;">
    <form method="POST" action="/safety/edit" class="safety-editor">
      <div class="uk-margin">
        <div id="toolbar"></div>
        <div id="safety-editor" name="content" style="height: 65vh;">
          <div class="ql-editor ql-blank" data-gramm="false" contenteditable="true"><%- content%></div>
        </div>
      </div>
      <input type="text" name="id" style="display:none" value="" />
      <p class="uk-text-right">
        <button class="uk-button uk-button-primary" id="add-safety-button" type="submit">Применить</button>
      </p>
    </form>
  </div>
</div>
